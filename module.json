{
  "name": "Telegram Sender",
  "type": "HTTP",
  "path": "Network",
  
  "version": "1.0.0",
  "description": "Sends Text and Photos via Telegram Bot API.",
  
  "url":"https://github.com/RGMediatec/Chataigne-module-Telegram-Sender",
  "downloadURL":"https://github.com/RGMediatec/Chataigne-module-Telegram-Sender/archive/master.zip",
  
  "hasInput": true,
  "hasOutput": true,
  
  "hideDefaultCommands":false,
  
  "defaults": {
    "baseAddress": "https://api.telegram.org/"
  },

  "parameters": {
    "Bot Token": {
      "type": "String",
      "default": ""
    },
    "Group ID": {
      "type": "String",
      "default": ""
    }
  },
  "scripts": [
    "telegramSender.js"
  ],
  "commands": {
    "Send Text": {
      "label": "Send Text",
      "description": "Textnachricht (optional MarkdownV2, optional Silent) an Telegram senden",
      "callback": "sendText",
      "parameters": {
        "Text": {
          "type": "String",
          "default": ""
        },
        "Silent": {
          "type": "Boolean",
          "default": false
        },
        "Markdown": {
          "type": "Boolean",
          "default": true
        }
      }
    },
    "Send Photo": {
      "label": "Send Photo",
      "description": "Foto von lokalem Pfad senden",
      "callback": "sendPhoto",
      "parameters": {
        "File Path": {
          "type": "File",
          "default": ""
        },
        "Silent": {
          "type": "Boolean",
          "default": false
        }
      }
    }
  }
}
